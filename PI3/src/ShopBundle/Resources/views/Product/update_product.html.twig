{% extends "::LayoutAdmin.html.twig" %}

{% block titre %}ShopBundle:Product:AddProduct{% endblock %}

{% block contenu %}




    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Modification d'un Produit</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form role="form" method="POST" action="{{ path('_update_product',{'id':product.idProduct}) }}">
            <div class="box-body">

                <div class="form-group">
                    <label>Nom</label>
                    <input type="text" class="form-control" name="nom"  id="nom"  value={{ product.name }} required>
                </div>

                <div class="form-group">
                    <label>Description</label>
                    <textarea name="description" id="description" class="form-control" required>{{ product.description }}</textarea>

                </div>

                <div class="form-group">
                    <label>Prix</label>
                    <input type="number" class="form-control" name="prix" id="prix" value={{ product.price }} required>
                </div>

                <div class="form-group">
                    <label>Quantit√©</label>
                    <input type="number" class="form-control" name="quantite" id="quantite" value={{ product.quantity }} required>
                </div>

                <div class="form-group">
                    <label>Type</label>
                    <input type="text" class="form-control" name="type" id="type" value={{ product.type }} required>
                </div>



                <div class="form-group">
                    <table>
                        <tr>
                            <td>
                                <label for="">Image</label>
                                <input type="file"  name="img">
                                <input type="text" name="image" id="image" value={{ product.image }}>


                            </td>
                            <td>
                                <img height="130" src="{{ asset('Client/upload/'~product.image ) }}" alt=""/>
                            </td>
                        </tr>
                    </table>



                </div>

            </div>
            <!-- /.box-body -->

            <div class="box-footer">
                <button type="submit" name="save" class="btn btn-primary">Modifier</button>
            </div>
        </form>
    </div>











{% endblock %}
