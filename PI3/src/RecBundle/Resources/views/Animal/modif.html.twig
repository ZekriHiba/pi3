{% extends "::layoutHome.html.twig" %}

{% block content %}
    <div class="appoform-wrapper">
        <hr class="invis">

        <form role="form" method="post" action="{{ path('update',{'id':anim.idAnimal}) }}">

            <header class="form-header">
                <h3> Ajouter animal perdu </h3>
            </header>

            <div class="post-body-form text-center">
                <strong> <p> Veuillez remplir ce formulaire</p></strong>
            </div>
            <fieldset class="row-fluid appoform">
                <div class="col-md-8">
                    <label class="sr-only">Ancienne Image :</label>
                    <img src="{{ anim.image}}" class="img-circle img-bordered-sm">
                    <label class="sr-only">Nouvelle Image :</label>
                    <input name="image" id="datepicker" type="file" placeholder="" class="form-control hasDatepicker">
                </div>
                <div class="col-md-8">
                    <label class="sr-only">Poids(kg) *</label>
                   <b> <input name="poids" id="datepicker" value="{{ anim.weight }}" type="text" placeholder="Poids" class="form-control hasDatepicker" required></b>
                </div>
                <div class="col-md-8">
                    <label class="sr-only">Surnom *</label>
                   <b><input name="surnom" type="text"  value="{{ anim.nickName}}" placeholder="Surnom" class="form-control" required></b>
                </div>
                <div class="col-md-8">
                    <label class="sr-only">Couleur *</label>
                   <b> <input name="couleur" type="text"  value="{{ anim.color }}" placeholder="Couleur" class="form-control hasDatepicker" required></b>
                </div>
                <div class="col-md-8">
                    <label class="">Sexe *</label><br>
                    <select name="sexe" class="selectpicker bs-select-hidden" data-style="btn-white" required>
                       <b> <option selected="selected" value="{{ anim.gender }}">{{ anim.gender }} </option></b>
                        {% if anim.gender  == "Male" %}
                           <b> <option value="Femelle">Femelle</option></b>
                        {% else %}
                            <b><option value="Male">Male</option></b>
                        {% endif %}

                    </select>
                </div>
                <div class="col-md-8">

                  <b>  <textarea name="description" type="text" placeholder="Description .." class="form-control">{{ anim.description }}</textarea></b>
                </div>

                <div class="col-md-8">
                    <button type="submit" name="modif" class="btn btn-primary btn-block btn-lg">Valider</button>
                </div>
            </fieldset>
        </form>
    </div>

{% endblock %}

